<%= simple_form_for @task do |f| %>
  <%= f.input :subject %>
  <%= f.input :project_id, collection: Project.active %>
  <%= f.input :description, as: :text %>
  <%= f.input :status, collection: Task.statuses_for_select, selected: Task.statuses(:todo) %>
  <%= f.input :type, collection: Task.types_for_select, selected: Task.types(:feature) %>
  <%= f.input :priority, collection: Task.priorities_for_select, selected: Task.priorities(:regular) %>

  <%= f.button :submit %>
<% end %>
