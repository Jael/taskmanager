<div class="row-fluid">
  <div class="span12">
    <%= render 'tasks/sidebar' %>

    <div class="container-fluid content-wrapper">
      <div class="row-fluid">
        <div class="span12">
          <div class="accordion" id="task-list">
            <h3>Todos</h3>
            <%= render "tasks/listbox", tasks: @tasks.todo %>
            <h3>ToReviews</h3>
            <%= render "tasks/listbox", tasks: @tasks.toreview %>
            <h3>Dones</h3>
            <%= render "tasks/listbox", tasks: @tasks.done %>
          </div>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span12">&nbsp;</div>
    </div>
  </div>
</div>
