<%= form_for [:admin, @project] do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :overview %><br />
    <%= f.text_area :overview %>
  </div>
  <div class="field">
    <%= f.label :identifier %><br />
    <%= f.text_field :identifier %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, Project.statuses_for_select %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= simple_form_for [:admin, @project] do |f| %>
  <%= f.input :name %>
  <%= f.input :overview, as: :text %>
  <%= f.input :identifier %>
  <%= f.input :status, collection: Project.statuses_for_select, selected: Project.statuses(:active) %>

  <%= f.button :submit %>
<% end %>
